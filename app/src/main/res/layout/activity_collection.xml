<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LocalActivity">

    <ImageView
        android:id="@+id/collection_exit_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/close"
        android:tint="#88000000"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/collection_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/collection"
        android:textSize="20sp"
        android:layout_alignTop="@id/collection_exit_iv"
        android:layout_alignBottom="@id/collection_exit_iv"
        android:layout_centerHorizontal="true"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/collection_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_below="@id/collection_title_tv"/>
    <TextView
        android:id="@+id/collection_none_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="我的收藏空空如野，赶紧去收藏吧！"
        android:gravity="center"
        android:visibility="gone"/>
</RelativeLayout>