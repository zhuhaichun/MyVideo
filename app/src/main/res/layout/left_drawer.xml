<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="240dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/drawer_head_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/login_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="还没登录，先登录吧"
        android:layout_below="@id/drawer_head_iv"
        android:gravity="center"/>
    <View
        android:id="@+id/drawer_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#88000000"
        android:layout_margin="15dp"
        android:layout_below="@id/login_prompt"/>
    <TextView
        android:id="@+id/drawer_set_info_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_divider"
        android:text="编辑资料"
        android:gravity="center"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/drawer_heart_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_set_info_tv"
        android:text="我的喜欢"
        android:gravity="center"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/drawer_collection_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_heart_tv"
        android:text="我的收藏"
        android:gravity="center"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/drawer_local_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_collection_tv"
        android:text="本地视频"
        android:gravity="center"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/drawer_change_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_local_tv"
        android:text="退出账号"
        android:gravity="center"
        android:textSize="20sp"
        android:padding="10dp"/>

</RelativeLayout>